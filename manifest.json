{
	"name" : "Orkut Topic Marker",
	"version" : "0.0.0.1",
	"description" : "Marks where you stopped reading Orkut topic messages",
	"options_page" : "options.html",
	"background_page" : "background.html",
	"content_scripts" : [
		{
			"matches" : [ "http://*.orkut.com/*", "http://*.orkut.com.br/*" ],
			"js"      : [ "TopicListPage.js", "TopicMessagesPage.js", "main.js" ],
			"run_at"  : "document_idle"
		}
	]
}
